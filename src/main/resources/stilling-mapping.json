          "copy_to": ["municipal_facet", "geography_all_no"]
        },
        "postalCode": {
          "type": "keyword"
        },
        "latitude": {
          "type": "keyword",
          "index": false,
          "doc_values": false
        },
        "longitude": {
          "type": "keyword",
          "index": false,
          "doc_values": false
        }
      }
    },
    "categoryList": {
      "properties": {
